<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splash.SplashActivity">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/elements_margin_medium"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_baseline_local_grocery_store_24" />

    <ProgressBar
        android:id="@+id/pg_loader"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_logo"
        android:layout_marginHorizontal="@dimen/elements_margin_huge"
        android:indeterminate="true"
        android:indeterminateTint="@color/blue_200"
        android:minWidth="@dimen/elements_margin_huge"
        android:minHeight="@dimen/progress_bar_min_height" />

</RelativeLayout>